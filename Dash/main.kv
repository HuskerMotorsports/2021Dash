                        group: 'FuelMap'

        
        Button:
            size_hint: 1, 0.12
            pos_hint: {"x":0,"y":0}
            text: "Return"
            on_release:
                root.manager.current = 'MainScreen'

<SettingsScreen>:

    FloatLayout:
        size: root.width, root.height

        ScrollView:
            pos_hint: {"right":1,"top":1}
            size_hint: 1, 0.87
            scroll_distance: 20

            GridLayout:
                cols: 1
                size_hint_y: None
                row_default_height: root.height*0.1
                spacing: [0,5] 
                height: self.minimum_height

                Button:
                    text: 'Launch Terminal'
                    on_release:
                        app.stopApp()

                Button:
                    text: 'Restart Dash'
                    on_release:
                        app.restart()

                Label:
                    text: root.ip_address
                    font_size: 40

                Label:
                    text: 'HUSKERDASH 2020.4'
                    font_size: 40

        Button:
            size_hint: 1, 0.12
            pos_hint: {"x":0,"y":0}
            text: "Return"
            on_release:
                root.manager.current = 'MainScreen'
