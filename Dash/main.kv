                        rgba: 1, 1, 1, 0.1
                    Rectangle:
                        size: self.size
                        pos: self.pos

        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.35, 0.3
            pos_hint: {"x":0.1,"top":0.9}
            Label:
                font_size: 250
                text: str(root.front_brake_pressure)

            Label:
                size_hint: 1, 0.2
