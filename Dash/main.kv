                    ToggleButton:
                        text: '1'
                        group: 'TractionControl'
                    ToggleButton:
                        text: '2'
                        group: 'TractionControl'
                    ToggleButton:
                        text: '3'
                        group: 'TractionControl'
                    ToggleButton:
                        text: '4'
                        group: 'TractionControl'
                    ToggleButton:
                        text: '5'
                        group: 'TractionControl'
                    ToggleButton:
                        text: '6'
                        group: 'TractionControl'
                    ToggleButton:
                        text: '7'
                        group: 'TractionControl'
                    ToggleButton:
                        text: '8'
                        group: 'TractionControl'
                    ToggleButton:
                        text: '9'
                        group: 'TractionControl'
                    

            BoxLayout:

                Label:
                    size_hint: 0.2 , 1
                    text: 'Throttle'
                    font_size: 60

                BoxLayout: 
                    
                    ToggleButton:
                        text: 'Normal'
                        group: 'ThrottleMap'
                        state: 'down'
                        on_release:
                            
                    ToggleButton:
                        text: 'Normal2'
                        group: 'ThrottleMap'
                    ToggleButton:
                        text: 'Skipad'
                        group: 'ThrottleMap'
                    ToggleButton:
                        text: 'Drag'
                        group: 'ThrottleMap'

            BoxLayout:

