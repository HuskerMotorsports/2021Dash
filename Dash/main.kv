<SuspensionScreen>:

    FloatLayout:
        size: root.width, root.height

        canvas:
            Color:
                rgba: 1, 1, 1, 0.1
            
            Rectangle:
                size: 1920, 54
                pos: 0, 1026

            Color:
                rgba: 1, 1, 1, 1
            
            Rectangle:
                size: 2, 54
                pos: 959, 1026

            Color:
                rgba: 0, 1, 0, 1
            
            Rectangle:
                size: 2 - 7.5 * root.steering_angle if (root.steering_angle != 0) else 0, 54
                pos: 959 if (2 - 7.5 * root.steering_angle < 0) else 960, 1026
        
        BoxLayout:
